{
  "name": "event-driven-orders-workflow",
  "version": "1.0.0",
  "description": "Production-ready event-driven serverless workflow on AWS using CDK v2 (TypeScript).",
  "main": "dist/infra/bin/app.js",
  "scripts": {
    "install:all": "npm install",
    "build": "tsc -p tsconfig.json",
    "synth": "npm run build && cdk synth",
    "deploy": "npm run build && cdk deploy --all",
    "destroy": "cdk destroy --all",
    "test": "jest"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.645.0",
    "@aws-sdk/client-eventbridge": "^3.645.0",
    "@aws-sdk/client-sqs": "^3.645.0",
    "@aws-sdk/util-dynamodb": "^3.645.0",
    "aws-cdk-lib": "2.151.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.134",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/uuid": "^10.0.0",
    "aws-cdk": "2.151.0",
    "esbuild": "^0.21.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
